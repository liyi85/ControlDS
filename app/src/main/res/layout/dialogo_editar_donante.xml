<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editarDonanteNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            style="@style/EditTextStyle"
            />

        <EditText
            android:id="@+id/editarDonanteApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            style="@style/EditTextStyle"
            />

        <TextView
            android:id="@+id/editarIdentificacion"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:editable="false"
            android:clickable="false"

            />


        <EditText
            android:id="@+id/editarEdad"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"

            />

        <EditText
            android:id="@+id/editartipoSangre"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de sangre"

            />

        <EditText
            android:id="@+id/editarRh"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="rh"

            />

        <EditText
            android:id="@+id/editarEstatura"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estatura"

            />

        <EditText
            android:id="@+id/editarPeso"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginRight="24dp"
            android:padding="8dp">

            <Button
                android:id="@+id/btn_cancelarE"
                style="@style/ButtonDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelar"/>

            <Button
                android:id="@+id/btn_editar"
                style="@style/ButtonDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EDITAR"
                android:layout_marginLeft="8dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>